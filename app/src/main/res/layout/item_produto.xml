<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Nome do Produto -->
        <TextView
            android:id="@+id/tvNomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Produto"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Descrição -->
        <TextView
            android:id="@+id/tvDescricaoProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição do produto"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- Informações de Estoque -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tvQuantidadeEstoque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estoque: 0"
                android:textSize="14sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvPrecoVenda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preço: R$ 0,00"
                android:textSize="14sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvCusto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custo: R$ 0,00"
                android:textSize="14sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvLucroProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lucro: R$ 0,00"
                android:textSize="14sp"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
